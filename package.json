{
  "name": "appium-electron-app",
  "version": "1.0.0",
  "description": "Simple Electron app with Appium server",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.example.appium-electron",
    "productName": "Appium Controller",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "asar": false,
    "extraResources": [
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": ["**/*"]
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "appium": "^2.4.0",
    "appium-uiautomator2-driver": "^2.42.0",
    "appium-xcuitest-driver": "^5.11.0",
    "webdriverio": "^8.24.0"
  }
}
